<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DefaultFont" TargetType="Control">
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Key="OpenSansFont" TargetType="Control">
        <Setter Property="FontFamily" Value="/Fonts/#Open Sans Light" />
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource OpenSansFont}"/>
    <Style TargetType="TextBox" BasedOn="{StaticResource OpenSansFont}"/>
    <Style TargetType="DataGrid" BasedOn="{StaticResource OpenSansFont}"/>
    <Style TargetType="ComboBox" BasedOn="{StaticResource OpenSansFont}"/>
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="OpenSansFont"/>
    </Style>

</ResourceDictionary>