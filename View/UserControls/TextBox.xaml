<UserControl x:Class="MinimarketApp.View.UserControls.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinimarketApp.View.UserControls" d:DataContext="{d:DesignInstance Type=local:TextBox}"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid Background="White">
        <TextBox x:Name="InputBox" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" FontSize="12" VerticalContentAlignment="Center" Padding="7,0,0,0" Background="Transparent" />
        <TextBlock Name="Placeholder" Text="{Binding BoundText}" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" FontSize="12" Panel.ZIndex="-1" />
    </Grid>
</UserControl>
